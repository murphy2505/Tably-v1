{
  "name": "tably-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Tably v1 backbone monorepo",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "seed": "ts-node packages/db/prisma/seed.ts"
  },
  "scripts": {
    "dev": "npm -w packages/db run build && npm -w apps/api run dev",
    "dev:web": "npm -w apps/web run dev",
    "dev:all": "npm -w packages/db run build && npm -w apps/api run dev & npm -w apps/web run dev",
    "db:up": "docker compose -f infra/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.yml down --remove-orphans",
    "db:reset": "docker rm -f tably-postgres || true && docker compose -f infra/docker-compose.yml down -v --remove-orphans && docker compose -f infra/docker-compose.yml up -d",
    "prisma:generate": "npm --workspace packages/db run prisma:generate",
    "prisma:migrate": "npm --workspace packages/db run prisma:migrate",
    "db:migrate": "npm --workspace packages/db run prisma:migrate",
    "db:seed": "npm --workspace packages/db run prisma:seed",
    "db:studio": "npm --workspace packages/db run prisma:studio",
    "smoke:api": "bash scripts/smoke-api.sh"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "escpos": "^3.0.0-alpha.6",
    "escpos-network": "^3.0.0-alpha.5",
    "qrcode": "^1.5.4"
  }
}
